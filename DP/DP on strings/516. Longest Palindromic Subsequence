https://leetcode.com/problems/longest-palindromic-subsequence/description/



// bottom up

class Solution {
public:
    int longestPalindromeSubseq(string s) {
        int n = s.length();
        vector<vector<int>> dp(n, vector<int>(n, 0));

        for(int i = n-1 ; i >= 0 ; i--) {
            for(int j = 0 ; j < n ; j++) {
                if(i < j) {
                    int v1 = 0, v2 = 0, v3 = 0;

                    v1 = dp[i+1][j];

                    v2 = dp[i][j-1];

                    if(s[i] == s[j]) v3 = 2 + dp[i+1][j-1];
                    
                    dp[i][j] = max(v1, max(v2, v3));

                } else if(i == j) {
                    dp[i][j] = 1;
                }
            }
        }
        return dp[0][n-1];
    }
};



