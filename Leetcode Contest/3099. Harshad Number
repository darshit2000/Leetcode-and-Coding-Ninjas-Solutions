https://leetcode.com/problems/harshad-number/description/



class Solution {
public:
    int sumOfTheDigitsOfHarshadNumber(int x) {
        int sum = 0;
        int num = x;
        
        while(x > 0) {
            sum += x%10;
            x = x/10;
        }
        
        if(num % sum == 0) return sum;
        return -1;
    }
};
