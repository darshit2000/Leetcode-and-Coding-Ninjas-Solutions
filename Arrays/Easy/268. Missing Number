class Solution {
public:
    int missingNumber(vector<int>& nums) {

        int n = nums.size();
        return ((n*(n+1))/2 - accumulate(nums.begin(), nums.end(), 0));

        // int n = nums.size();
        // vector<int> count(n+1);

        // for(int i=0; i<n; i++) {
        //     count[nums[i]]++;
        // }

        // for(int j=0; j<=n; j++) {
        //     if(count[j] == 0) return j;
        // }
        // return -1;
    }
};
