double myPow(double x, int n) {
    // Write Your Code Here
    if(n == 0) return 1;
    if(n > 0) return x * myPow(x, n-1);
    else if(n < 0) return ((1/x) * myPow(x, n+1));
}







class Solution {
public:
    double myPow(double x, int n) {
        if(n == 0) return 1;
        // if(x == 1) return 1;
        long N = n;
        if(n < 0) {
            x = 1/x;
            N = -N;
        }
        if(n % 2 == 0) return myPow(x*x, N/2);
        else return x*myPow(x*x, N/2);
    }
};
